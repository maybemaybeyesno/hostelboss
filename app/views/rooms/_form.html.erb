<% if @room.errors.present? %>
  <%= @room.errors.to_json %>
<% end %>

<%= form_with model: @room do |form| %>
  <p>
    <%= form.label :name %>: <%= form.text_field :name %>
  </p>
  <p>
  <%= form.label :description %>: <br />
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :beds %>: <%= form.number_field :beds %>
  </p>
  <%= form.submit %>
<% end %>