<% if Transaction.any? %>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Sent</th>
        <th>Sender</th> 
        <th>Receiver</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% Transaction.all.each do |transaction| %>
        <tr>
          <td><%= transaction.id %></td>
          <td><%= transaction.sent_at %></td>
          <td><%= transaction.sender.name %></td>
          <td><%= transaction.receiver.name %></td>
          <td><%= transaction.amount %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  No people here! Use Rails console to add some.
<% end %>