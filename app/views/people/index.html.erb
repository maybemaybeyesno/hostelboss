<% if Person.any? %>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th> 
        <th>Description</th>
        <th>Total received</th>
        <th>Total given</th>
        <th>Balance</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% Person.all.each do |person| %>
        <tr>
          <td><%= person.id %></td>
          <td><%= person.name %></td>
          <td><%= person.description %></td>
          <td><%= person.total_earned %></td>
          <td><%= person.total_spent %></td>
          <td><%= person.balance %></td>
          <td>ğŸ§ <%= link_to "Edit", edit_person_path(person.id)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  No people here! Use Rails console to add some.
<% end %>
